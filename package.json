{
  "name": "jefra-pools-website",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Professional pool cleaning and maintenance landing page",
  "keywords": [
    "pool cleaning",
    "maintenance",
    "landing page",
    "react",
    "typescript"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "preinstall": "npx only-allow npm",
    "prepare": "husky install",
    "performance": "npm run build && npm run preview",
    "copilot:context": "echo 'GitHub Copilot Context Loaded: JefraPools - Pool cleaning service in La Molina, Lima, Peru. React+TypeScript+Vite+Tailwind. Focus: conversion optimization, mobile-first, evidence-based decisions.'",
    "help": "echo 'Available commands: dev, build, test, lint, type-check, performance, copilot:context'"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "framer-motion": "^12.23.12",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.61.1",
    "react-icons": "^5.5.0",
    "swiper": "^11.2.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --max-warnings=0",
      "tsc --noEmit --pretty false"
    ],
    "*.{js,jsx}": [
      "eslint --max-warnings=0"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  }
}
